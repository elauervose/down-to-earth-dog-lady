<style type="text/css">
  .tile-top {
    width: 100%;
    float: none;
    display: block;
    overflow: hidden;
    height: 200px;
    position: relative;
  }
  .tile-bottom {
    width: 100%;
    float: none;
    display: block;
    overflow: hidden;
    height: 300px;
    position: relative;
    margin-bottom: 20px;
  }
  .tile-back {
    width: 100%;
    float: none;
    display: block;
    overflow: hidden;
    height: 500px;
    padding: 3em;
    background-color: #47b475;
    margin-bottom: 20px;
  }

  .tile-back h4, .tile-back h5, .tile-back h6  {
    color: white;
    font-weight: bold;
  }
  .tile-top .description,
  .tile-bottom .description {
    padding: 40px;
  }
  .tile-top:hover .background-image-holder {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
  }
  @media all and (max-width: 767px) {
    .tile-left,
    .tile-right {
      width: 100%;
      float: none;
    }
  }

  #training .flip {
    -webkit-perspective: 800px;
    perspective: 800px;
    height: 500px;
    position: relative;
    margin-bottom: 5em;
  }
  #training .flip .card.flipped {
    -webkit-transform: rotateY(-180deg);
    transform: rotateY(-180deg);
  }
  #training .flip .card {
    width: 100%;
    height: 100%;
    -webkit-transform-style: preserve-3d;
    transform-style: preserve-3d;
    -webkit-transition: 0.5s;
    transition: 0.5s;
  }
  #training .flip .card .face {
    width: 100%;
    height: 100%;
    position: absolute;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    z-index: 2;
  }
  #training .flip .card .front {
    position: absolute;
    z-index: 1;
    cursor: pointer;
  }
  #training .flip .card .back {
    -webkit-transform: rotatey(-180deg);
    transform: rotateY(-180deg);
    cursor: pointer;
  }

  #training .face {
    -webkit-filter: drop-shadow(none);
    filter: drop-shadow(none);
    -webkit-transition: all .5s ease;
    -o-transition: all .5s ease;
    transition: all .5s ease;
  }

  #training .face:hover  {
    -webkit-filter: drop-shadow(4px 5px 6px rgba(10, 35, 35, 0.3));
    filter: drop-shadow(4px 5px 6px rgba(0,0,0,0.3));
    -webkit-transition: all .5s ease;
    -o-transition: all .5s ease;
    transition: all .5s ease;
  }

  #training h5 {
    font-size:14px;
    line-height: 22px;
    margin-bottom: 16px;
   }

   #training h3 {
       font-size: 24px;
       line-height: 40px;
   }

   #training h5.contact {
    font-size:12px;
    line-height: 22px;
    margin-bottom: 16px;
   }


  @media (max-width: 991px) and (min-width: 768px){
    div.card.container {
     width: 768px;
   }
  }

  @media (max-width: 1200px) and (min-width: 768px){
   h3 {
    font-size: 22px;
   }
   h4 {
    font-size: 20px;
    line-height: 28px;
    margin-bottom: 18px;
   }
