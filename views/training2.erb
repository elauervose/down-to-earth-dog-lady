    }
  }

  .ti-arrow-right {
    color: #47b475;
    font-size: 1em;
    font-weight: 600;
    margin-bottom: 10px;
    position: absolute;
    bottom: 15px;
    right: 30px;
    opacity: .75;
  }

  #training .face:hover .ti-arrow-right {
    color: #47b475;
    font-size: 1em;
    font-weight: 600;
    margin-bottom: 10px;
    position: absolute;
    bottom: 15px;
    right: 30px;
    opacity: 1;
    -webkit-filter: drop-shadow(0px 1px 1px rgba(10, 35, 35, 0.3));
    filter: drop-shadow(0px 1px 1px rgba(0,0,0,0.3));
    -webkit-transition: all .5s ease;
    -o-transition: all .5s ease;
    transition: all .5s ease;
  }

  .ti-arrow-right:before {
    content: none;
  }

  .ti-arrow-right:after {
      content: "\e628";
  }

  *:before, *:after {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    margin-left: 10px;
    margin-top: 5px;
    bottom: 10px;
  }

  div.col-md-4.col-sm-6.flip {
    margin-bottom: 20px;
  }

  .background-image-holder img {
    display: block;
}

</style>

